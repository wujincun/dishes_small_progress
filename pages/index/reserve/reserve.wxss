/* pages/index/reserve/reserve.wxss */
.reserve-message, .person-message, .remarks{background: #fff; margin-top: 20rpx; padding-left: 32rpx;}
.reserve-item, .preson-message-item{height: 79rpx; line-height: 79rpx; display: flex; align-items: center; padding-right: 32rpx; box-sizing: border-box; justify-content: space-between;}
reserve-message wx-text, .person-message>text,.reserve-message wx-text, .person-message>view{flex: 1; display: flex; align-items: center;}
.reserve-item:last-child, .preson-message-item:last-child{border-bottom: none;}
.remarks{height: 160rpx; background: #fff;}
.reserve-message text, .person-message text{font-size: 28rpx; color: #333;}
.reserve-message image, .person-message image{width: 13rpx; height: 23rpx; margin-top: -1rpx;}
.reserve-message input, .person-message input{height: 100%; line-height: 79rpx; float: left; text-align: right; }
.reserve-message input{width: 270rpx; padding-right: 40rpx;}
.reserve-message .table-view, .reserve-message .time-view{height: 100%; width: 100%; box-sizing: border-box; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; text-align: right;  padding-right: 20rpx; font-size: 28rpx; color: #999;}
.person-message input{width: 320rpx;}
.remarks{padding: 20rpx; position: relative; font-size: 28rpx; color: #666;}
.remarks .remarks-text{width: 66rpx; position: absolute; left: 32rpx; top: 20rpx;}
.remarks textarea{height: 160rpx; width: 100%;}
/*.remarks-add textarea{position: absolute; left: 114rpx; top: 20rpx; height: 160rpx; width: 600rpx;}*/
/*.remarks text, .remarks textarea{float: left;}*/
.btn-group{margin-top: 318rpx; text-align: center;}
.btn-group .btn{width: 670rpx; height: 94rpx; display: inline-block;}
.btn-determine{color: #fff; background: #fd711c;}
.reserve-message input, .person-message input {font-size: 28rpx;color: #666;}
.mark-bg-table, .mark-bg-time{width: 100%; height: 100%; background: rgba(0, 0, 0, .4); position: absolute; top: 0; left: 0; z-index: 998;}
.table, .time-modle{width: 100%; min-height: 0; max-height: 560rpx; background: #fff; position: absolute; left: 0; bottom: 0; text-align: center; z-index: 999;}
.table-item-list {min-height: 0; max-height: 460rpx; overflow-y: auto;}
.table-item{height: 92rpx; line-height: 92rpx; font-size: 28rpx; color: #666;}
.table-item-list .active{color: #fd711c;}
.table button, .time-modle>.time-mode-btn{background: #fff; border-top: 1rpx solid #e6e6e6; height: 99rpx; line-height: 99rpx; font-size: 32rpx;border-radius: none;}
.time-modle-top{display: flex;} 
.time-date{flex: 0 0 224rpx; width: 224rpx; max-height: 460rpx; min-height: 0; background: #fafafa; text-align: center; overflow-y: auto;}
.time-date .active{background: #fff; color: #fd711c;}
.time-hour .active{color: #fd711c;}
.time-hour{flex: 1; height: 460rpx; overflow-y: auto; text-align: center;}
.time-date-item, .time-hour-item{ font-size: 28rpx; height: 90rpx; display: flex; align-items: center; justify-content: center;}
.time-hour-item{box-sizing: border-box; padding-left: 132rpx; padding-right: 28rpx; justify-content: space-between;}
.time-hour-item .check-hour{width: 30rpx; height: 30rpx; border-radius: 50%; border: 1px solid #ccc; box-sizing: border-box;}
.reserve-item view:last-child{display: flex; justify-content: flex-end; align-items: center;}
.time-hour-item image{width: 30rpx; height: 30rpx;}
.remarks .font-size{position: absolute; bottom: 20rpx; right: 32rpx; color: #ccc;}
.font-nor {color: #cccccc;}
.reserve-message .active{color: #666!important;}
.placeholder-color{color: #999;}
.placeholder-color-w{color: #666;}
.item-null{width: 100%; height: 100%; color: #666; font-size: 28rpx; position: relative;}
.item-null view{height: 40rpx; line-height: 40rpx; position: absolute; left: 0; right: 0; top: 0; bottom: 0; margin: auto;}