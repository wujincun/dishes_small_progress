.order-detail-wrapper{box-sizing:border-box;padding-bottom:22rpx;width:100%; margin-bottom: 120rpx;}
.order-type{display:flex;height:340rpx;flex-direction:column;justify-content:center;align-items:center;background:#fff;border-top:0.5px solid #e4e4e4;box-sizing:border-box}
.order-type image{width:111rpx;height:111rpx}
.order-text{margin-top:60rpx;font-size:32rpx;color:#272727}
.order-info{padding:0 45rpx;background:#fff;height:236rpx;display:flex;flex-direction:column;justify-content:center;align-items:center;box-sizing:border-box}
.order-info .location{width:100%;flex:1;padding-top:22rpx;border-top:0.5px solid #e4e4e4;display:flex;align-items:center;justify-content:center;font-size:40rpx;color:#fd711c}
.order-info .time{padding-top: 18rpx; color:#272727;font-size:36rpx;width:100%;flex:1;box-sizing:border-box;border-bottom:1px dashed #e5e5e5;display:flex;justify-content:center}
.order-detail{background:#fff;padding:0 45rpx}
.order-detail>view{padding:20rpx 0;display:flex;align-items:center;min-height:120rpx;font-size:30rpx;box-sizing:border-box;border-bottom:0.5px solid #e4e4e4}
.order-detail>view:last-child{border-bottom:none}
.order-detail .title{color:#888; display: flex; justify-content: space-between; width: 150rpx; box-sizing:border-box;padding-right:20rpx}
.remarks .num,.remarks .title{align-self:center}
.order-detail .num{flex:1;color:#272727}
.cancel-order{margin-top:20rpx}
.cancel-order button{border-radius:0;font-size:30rpx;background:#fff;height:98rpx;line-height:98rpx;color:#888}
.cancel-order button::after{content:none}
.timer{font-size: 32rpx; color: #6b98ff; margin-top: 17rpx;}
.footer-bottom{width: 100%; height: 100rpx; position: fixed; left: 0; bottom: 0; background: #fff;}
.footer-bottom .pay{width: 100%; height: 100%; display: flex; justify-content: center; align-items: center;}
.pay-item{flex: 1; height: 100%; box-sizing: border-box; display: flex; align-items: center; justify-content: center;}
.pay-item:first-child{border-right: 0.5px solid #e4e4e4; flex-direction: column;}
.pay-item:nth-child(2){font-size: 34rpx; color: #888;}
.pay-item:nth-child(3){font-size: 34rpx; color: #fff; background: #fd711c;}
.pay-item:nth-child(1) text{display: block;}
.pay-item:nth-child(1) text:first-child{font-size: 24rpx;}
.pay-item:nth-child(1) text:last-child{font-size: 38rpx; color: #e64340; margin-top: 4rpx;}
.bz-none{opacity: 0;}